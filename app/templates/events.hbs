
<main>
  <h1>Events Calendar</h1>

  <div class="week">
    {{#each weekDates as |date|}}
      {{#events-day date=date as |day|}}
        {{#day.title}}
          <h3>{{moment-format date 'dddd'}}</h3>
          <h3>{{moment-format date 'Do MMM'}}</h3>
        {{/day.title}}
        {{#day.body}}
          {{event-entries
            events=model
            date=date
          }}
        {{/day.body}}
      {{/events-day}}
    {{/each}}
  </div>

  {{create-event weekDates=weekDates}}
</main>
